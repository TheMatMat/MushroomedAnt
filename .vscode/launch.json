    "version": "0.2.0",
    "configurations": [
        {
            "name": "GDScript: Launch Project",
            "type": "godot",
            "request": "launch",
            "project": "${workspaceFolder}",
            "debug_collisions": false,
            "debug_paths": false,
            "debug_navigation": false,
            "additional_options": ""
        },
        {
            "name": "Attach",
            "type": "godot",
            "request": "attach",
            "port": 6007,
            "debugServer": 6006,
            "address": "127.0.0.1"
        },
        {
            "name": "Launch pinned Scene",
            "type": "godot",
            "request": "launch",
            "project": "${workspaceFolder}",
            "debug_collisions": false,
            "debug_paths": false,
            "debug_navigation": false,
            "additional_options": "",
            "scene": "pinned"
        }
    ]
}